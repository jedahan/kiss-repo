#!/bin/sh -e

repoinstalldir="$1/var/db/kiss/repos"
mkdir -p "$repoinstalldir"
git clone --recursive https://github.com/Himmalerin/kiss-fonts.git "$repoinstalldir/fonts"

mkdir -p "$1/etc/profile.d"
printf 'export KISS_PATH=$KISS_PATH:/var/db/kiss/repos/fonts/kiss-fonts\n' > "$1/etc/profile.d/kiss_repo-fonts.sh"
