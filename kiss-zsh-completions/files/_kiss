#compdef kiss

_kiss() {
  local line

  function _commands() {
    IFS=$'\n'
    local -a extcommands=(${(@f)$(kiss help-ext 2>&1 | tail -n+2 | cut -d' ' -f2- | tr -s ' ' | sed -e 's/\ /\:/' )})
    local -a subcommands=(${(@f)$(kiss 2>&1 | tail -n+2 | head -n2 | cut -d' ' -f2- | tr -s ' ' | sed -e 's/\ /\:/' )})
    _describe 'command' subcommands -- extcommands
  }

  _arguments -C "1: :_commands"
}

_kiss
