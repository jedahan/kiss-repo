#!/bin/sh -e

sed -i "s/sbin/bin/g" Makefile

export DESTDIR="$1"

make \
  PREFIX=/usr \
  CONFIG_ENABLE_LIBPCI_PROGRAMMERS=no \
  CONFIG_ENABLE_LIBUSB0_PROGRAMMERS=no \
  CONFIG_ENABLE_LIBUSB1_PROGRAMMERS=no \

make \
  PREFIX=/usr \
  CONFIG_ENABLE_LIBPCI_PROGRAMMERS=no \
  CONFIG_ENABLE_LIBUSB0_PROGRAMMERS=no \
  CONFIG_ENABLE_LIBUSB1_PROGRAMMERS=no install
